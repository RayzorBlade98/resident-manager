    "@mui/x-date-pickers": "^6.5.0",
    "dayjs": "^1.11.7",
    "glamor": "^2.20.40",
    "lodash": "^4.17.21",
    "mdb-react-ui-kit": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",

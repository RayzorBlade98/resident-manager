{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "module": "ES2020",
    "moduleResolution": "Node",
    "paths": {
      "_/*": ["src/*"],
      "_public/*": ["public/*"],
      "_main/*": ["src/main/*"],
      "_renderer/*": ["src/renderer/*"],
      "_types/*": ["src/types/*"],
      "_utils/*": ["src/utils/*"],
      "_states/*": ["src/states/*"],
      "src/'": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "target": "ES2021"
  },
  "include": ["src/**/*"]
}
